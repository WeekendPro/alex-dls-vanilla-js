{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "warn",
		"semi": ["error", "always"],
		"no-multiple-empty-lines": ["error", { "max": 1 }],
		"eqeqeq": ["error", "always"]
	},
	"ignorePatterns": ["node_modules/", "dist/", "build/"]
}
